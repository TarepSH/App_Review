    <div class="container">

        <div class="row"> 
          <div class="col-md-7 col-md-offset-2">
          <div class="thumbnail">
                      <%= image_tag @product.image(:medium), class: "img-responsive img-thumbnail" %>

                    <div class="caption-full">
                        <h4>  <%= @product.name %>
                        </h4>
                        <p>  <%= @product.description %> </p>
                    </div>
                    
                     <div class="ratings">
                        <p class="pull-right"><%= "#{@reviews.length} reviews" %></p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                            <%= @avg_reviews %>
                        </p>
                    </div>
                </div>

                <div class="well">

                    <div class="text-right">
                      <%= link_to 'Leave a Review ', new_product_review_path(@product), class: "btn btn-success" %>
                    </div>

                    <hr>
                     <% if @reviews.blank? %>
                    <h3>No reviews just yet, would you like to add the first!</h3>
                    <%= link_to "Write Review", new_product_review_path(@product), class: "btn btn-danger" %>
                    <% else %>
                  <% @reviews.each do |review| %>
                    <div class="row">
                        <div class="col-md-12">
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                                <%= review.user.email %>
                                <%= review.rating %>

                            <span class="pull-right"><%= review.created_at %></span>
                            <p>  <%= review.comment %></p>
                        </div>
                    </div>

                    <hr>
<% end %>
<% end %>
               


                </div>

            </div>

        </div>

    </div>
    <!-- /.container -->




</div>
